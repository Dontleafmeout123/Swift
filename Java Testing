//Note: The package is the project name. You may get an error if you use my package.
package testingapp2;

import java.awt.Color;
import java.awt.FlowLayout;
import java.awt.Font;
import javax.swing.*;

public class TestingApp2 extends JFrame {
    private static void constructGUI() {
        JFrame.setDefaultLookAndFeelDecorated(true);
        JFrame frame = new JFrame();
        frame.setTitle("Demo");
        frame.setLayout(new FlowLayout ());
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        JLabel label1 = new JLabel(); 
        label1.setText("<html>Welcome to Cryptic. <br> You are a brilliant mastermind with a plan to rule "
                + "the world.<br> However while you were sleeping somebody transferred you to a different "
                + "world where you have to escape.</html>");
        label1.setHorizontalTextPosition(JLabel.CENTER);
        label1.setFont(new Font("Verdana", Font.BOLD, 12));
        label1.setForeground(Color.GRAY);
        
        JLabel label2 = new JLabel();
        label2.setText(
                "<html>Last Name<br><font face='courier new'"
                + "color=red>(mandatory) </font></html>'");
        JLabel label3 = new JLabel();
        label3.setText ("Test");
        ImageIcon imageIcon = new ImageIcon("Demo.jpg");
        JLabel label4 = new JLabel(imageIcon);
        JLabel label5 = new JLabel("Testing" , imageIcon, SwingConstants.RIGHT);
        frame.add(label1);
        frame.pack();
        frame.setVisible(true);
    }
    public static void main(String[]args) {
        SwingUtilities.invokeLater(new Runnable() {
            public void run() {
                constructGUI();
            }
        });
    }
}
