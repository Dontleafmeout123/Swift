package cryptic;


import java.awt.Color;
import java.awt.FlowLayout;
import java.awt.Font;
import java.awt.GridLayout;
import javax.swing.*;

public class TestingApp2 extends JFrame {
    private static void constructGUI() {
        JFrame.setDefaultLookAndFeelDecorated(true);
        JFrame frame = new JFrame();
        frame.setTitle("Cryptic Launcher");
        frame.setLayout(new FlowLayout ());
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        JLabel label1 = new JLabel("<html>Welcome to Cryptic. <br> You are a brilliant mastermind with a plan to rule "
                + "the world.<br> However while you were sleeping somebody transferred you to a different "
                + "world where you have to escape. Good Luck!! </html>"); 
        
        label1.setHorizontalTextPosition(JLabel.CENTER);
        label1.setFont(new Font("Verdana", Font.BOLD, 12));
        label1.setForeground(Color.GRAY);
        frame.setSize(400,400);
        frame.setLayout(new GridLayout(7, 5));
        JButton button1 = new JButton("Play");
        button1.addActionListener(new ActionListener(){
            public void actionPerformed
        }
        );
        
        
        Icon icon = new ImageIcon("/Users/DivyaGoyal/Desktop/Demo.jpg ");
        JLabel label2 = new JLabel(icon);
        
        frame.add(label2);
        frame.add(label1);
        frame.add(button1);
        frame.pack();
        frame.setVisible(true);
    }
    public static void main(String[]args) {
        SwingUtilities.invokeLater(new Runnable() {
            public void run() {
                constructGUI();
            }
        });
    }
}
