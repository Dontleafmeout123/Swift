        Character_2.setSize(new Dimension(83, 291));
        Character_2.setVisible(false);
        frame.add(label2);
        frame.add(label1);
        frame.add(button1);
        frame.add(Character_1);
        frame.pack();
        frame.add(Character_2);
        frame.setVisible(true);
        
             button1.addActionListener(new ActionListener() {
         public void actionPerformed(ActionEvent e) {         
             
              label2.setText("<html><center>Choose your Character<br>Proceed at your own risk</center></html>");
              label2.setHorizontalTextPosition(JLabel.CENTER); 
